  <ModulePrefs title="Wave Dice Gadget" height="160">
    <Require feature="wave" /> 
  </ModulePrefs>
<Content type="html">

<![CDATA[ 

<style>
#output {
  border: 1px solid black;
  padding: 2px;
  width: auto;
}
#output img {
  width: 1em;
  height: 1em;
  border: 1px solid #CCCCCC;
  border-right: 2px solid #CCCCCC;
  border-bottom: 2px solid #CCCCCC;
}
